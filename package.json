{
  "name": "express-sandbox",
  "version": "1.0.0",
  "main": "src/index.mjs",
  "license": "MIT",
  "scripts": {
    "start:dev": "dotenv -e .env -- nodemon ./src/index.mjs",
    "start:prod": "pm2 start",
    "stop:prod": "pm2 stop server",
    "css:watch": "npx tailwindcss -i ./public/css/styles.input.css -o ./public/css/styles.output.css --watch",
    "css:build": "npx tailwindcss -i ./public/css/styles.input.css -o ./public/css/styles.output.css",
    "build": "npm run fmt && npm run check && npm run css:build",
    "type-check": "tsc --project jsconfig.json",
    "test": "node --test",
    "lint": "npx eslint ./src/ --ext .mjs",
    "fmt": "npx prettier --write 'src/**/*.mjs'",
    "check": "npm run type-check && npm run lint",
    "migrate:up": "dotenv -- node-pg-migrate up",
    "migrate:down": "dotenv -- node-pg-migrate down",
    "migrate:redo": "dotenv -- node-pg-migrate redo",
    "migrate:create": "node-pg-migrate create -j sql",
    "gen:secret": "node ./src/core/scripts/generateSecret.mjs"
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "prettier": {
    "singleQuote": false,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest"
    },
    "rules": {
      "quotes": [
        2,
        "double",
        {
          "allowTemplateLiterals": true,
          "avoidEscape": true
        }
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/express-minify": "^0.1.38",
    "@types/express-session": "^1.18.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.7",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.35.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "express-minify": "^1.0.0",
    "express-session": "^1.18.0",
    "http-status": "^1.7.4",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^6.2.2",
    "noop-tag": "^2.0.0",
    "pg": "^8.11.5",
    "pm2": "^5.3.1",
    "winston": "^3.13.0",
    "zod": "^3.22.4"
  }
}
