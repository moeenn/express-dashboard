{
  "name": "express-sandbox",
  "version": "1.0.0",
  "main": "src/index.mjs",
  "license": "MIT",
  "scripts": {
    "start:dev": "dotenv -e .env -- nodemon ./src/index.mjs",
    "start:prod": "pm2 start",
    "stop:prod": "pm2 stop server",
    "type-check": "tsc --project jsconfig.json",
    "test": "node --test",
    "lint": "npx eslint ./src/ --ext .mjs",
    "fmt": "npx prettier --write 'src/**/*.mjs'",
    "check": "npm run type-check && npm run lint",
    "db:migrate": "node-pg-migrate up",
    "db:migration": "node-pg-migrate create -j sql",
    "db:clear": "dotenv -e .env -- node ./src/lib/scripts/clearDatabase.mjs",
    "gen:secret": "node ./src/lib/scripts/generateSecret.mjs"
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "prettier": {
    "singleQuote": false,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-console": "warn",
      "quotes": [
        "warn",
        "double",
        {
          "allowTemplateLiterals": true,
          "avoidEscape": true
        }
      ],
      "semi": [
        "warn",
        "never"
      ],
      "no-unused-vars": "warn"
    }
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/express-minify": "^0.1.38",
    "@types/express-session": "^1.18.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.7",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.35.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@status/codes": "^1.6.2",
    "argon2": "^0.40.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "express-minify": "^1.0.0",
    "express-session": "^1.18.0",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^6.2.2",
    "noop-tag": "^2.0.0",
    "pm2": "^5.3.1",
    "postgres": "^3.4.4",
    "winston": "^3.13.0",
    "zod": "^3.22.4"
  }
}
